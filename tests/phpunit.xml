<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./bootstrap.php">
    
    <testsuite name="Library Test Suite">
        <directory>./library</directory>
    </testsuite>
    
    <logging>
        <log type="coverage-html" 
            target="./log/report" 
            charset="UTF-8" 
            yui="true" 
            highlight="true" 
            lowUpperBound="40"
            highLowerBound="70" />
        <log type="testdox-html" target="./log/testdox.html" />
    </logging>
    
</phpunit>